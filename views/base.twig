<!DOCTYPE html>
<html {{ site.language_attributes }}>
<head>
  <meta charset="{{ site.charset }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ function('wp_title', '|', true, 'right') }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  {% if not function('has_site_icon') %}
    <link rel="icon" type="image/svg+xml" href="{{ site.theme.link }}/logo.svg">
  {% endif %}
  {{ function('wp_head') }}
</head>
<body {{ function('body_class', ['font-sans', 'antialiased', 'text-brand-charcoal']) }}>
  <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-soft focus:bg-brand-wood focus:px-5 focus:py-3 focus:text-white">Siirry sisältöön</a>
  <div class="relative flex min-h-screen flex-col overflow-hidden bg-gradient-to-br from-brand-wood via-brand-pine to-brand-mist">
    {% include 'header.twig' with { title: site.name, subtitle: site.description } %}
    <main id="main-content" class="flex-1 bg-gradient-to-br from-brand-wood via-brand-pine to-brand-mist">
      {% block content %}{% endblock %}
    </main>
    {% include 'footer.twig' %}
  </div>
  {{ function('wp_footer') }}
</body>
</html>

