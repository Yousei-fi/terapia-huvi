{% extends "base.twig" %}

{% block content %}
<article class="bg-white py-16 md:py-20">
  <div class="mx-auto max-w-3xl px-4">
    <span class="eyebrow text-brand-pine">Ajankohtaista</span>
    <h1 class="section-heading mt-4">{{ post.title }}</h1>
    <p class="mt-3 text-sm text-slate-500">{{ post.date('j.n.Y') }}</p>
    {% if post.thumbnail %}
      <div class="mt-8 overflow-hidden rounded-3xl">
        <img src="{{ post.thumbnail.src('large') }}" alt="" class="w-full object-cover" loading="lazy">
      </div>
    {% endif %}
    <div class="prose prose-lg prose-slate mt-10">
      {{ post.content }}
    </div>
  </div>
</article>
{% endblock %}

