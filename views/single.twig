{% extends "base.twig" %}

{% block content %}
{% set lang = language ?? 'fi' %}
<article class="py-16 md:py-20">
  <div class="mx-auto max-w-3xl px-4">
    <span class="eyebrow text-white/80">Blogi</span>
    <h1 class="section-heading text-white mt-4">{{ post.title }}</h1>
    <p class="mt-3 text-sm text-white/60">{{ post.date(lang == 'fi' ? 'j.n.Y' : 'F j, Y') }}</p>
    {% if post.thumbnail %}
      <div class="mt-8 overflow-hidden rounded-3xl">
        <img src="{{ post.thumbnail.src('large') }}" alt="" class="w-full object-cover" loading="lazy">
      </div>
    {% endif %}
    <div class="prose prose-invert prose-lg max-w-none mt-10 text-white/80">
      {{ post.content }}
    </div>
  </div>
</article>
{% endblock %}

