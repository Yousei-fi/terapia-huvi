<article class="flex h-full flex-col rounded-3xl border border-white/20 bg-white/10 p-6 backdrop-blur transition duration-150 hover:-translate-y-1 hover:border-white/30">
  {% if image %}
    <div class="mb-4 overflow-hidden rounded-2xl">
      <img src="{{ image }}" alt="" class="w-full object-cover" loading="lazy">
    </div>
  {% endif %}
  {% if meta %}
    <p class="mb-2 text-xs font-semibold uppercase tracking-wide text-white/60">{{ meta }}</p>
  {% endif %}
  <h3 class="text-lg font-semibold text-white">
    {% if link %}
      <a href="{{ link }}" class="transition hover:text-white/80">{{ title }}</a>
    {% else %}
      {{ title }}
    {% endif %}
  </h3>
  {% if content %}
    <p class="mt-3 flex-1 text-sm text-white/80">{{ content }}</p>
  {% endif %}
  {% if link %}
    <div class="mt-4">
      <a href="{{ link }}" class="inline-flex items-center gap-2 text-sm font-semibold text-white transition hover:text-white/80">
        <span>Lue lisää</span>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M5 12h14" />
          <path d="M13 6l6 6-6 6" />
        </svg>
      </a>
    </div>
  {% endif %}
</article>

