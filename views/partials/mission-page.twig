{% set lang = lang ?? language ?? 'fi' %}
{% set mission_defaults = {
  'fi': {
    'eyebrow': 'Missiomme',
    'title': 'Ihmisarvoinen päihdepolitiikka syntyy kuuntelemalla',
    'copy': '<p>Teemme vaikuttamistyötä ruohonjuuresta eduskuntaan. Yhdistämme tutkimustiedon ja kokemuksen, jotta palvelut, säädökset ja asenteet tukevat ihmistä – eivät rankaise.</p>',
    'focus_heading': 'Painopisteet',
    'focus': [
      'Kiertävä haittoja vähentävä tukikiertue yhdessä paikallisten toimijoiden kanssa.',
      'Hyvät käytännöt kunnille: yhteiset pelisäännöt inhimilliseen palveluohjaukseen.',
      'Vertaistoimijoiden koulutusverkosto kaikkiin maakuntiin.'
    ]
  },
  'en': {
    'eyebrow': 'Our mission',
    'title': 'Humane drug policy grows from listening',
    'copy': '<p>From grassroots to parliament, we connect evidence with lived experience so that services, legislation, and attitudes support people rather than punish them.</p>',
    'focus_heading': 'Strategic priorities',
    'focus': [
      'A touring harm reduction roadshow co-created with local partners.',
      'Shared playbooks for municipalities to build compassionate service pathways.',
      'A nationwide training network for peer advocates.'
    ]
  }
} %}
{% set mission_data = mission_defaults[lang] ?? mission_defaults.fi %}
{% set slug = slug ?? 'mission-page' %}
{% set highlights_default = [
  { 'title': lang == 'fi' ? 'Poliittinen vaikuttaminen' : 'Policy advocacy', 'copy': lang == 'fi' ? 'Laadimme muistioita, kannanottoja ja verkostoyhteistyötä, jotta päätöksenteko perustuu parhaaseen tietoon.' : 'We prepare briefs, statements, and alliances so that decision-making rests on the best available evidence.' },
  { 'title': lang == 'fi' ? 'Yhteisöjen tukeminen' : 'Supporting communities', 'copy': lang == 'fi' ? 'Vahvistamme vertaistukea, kriisiapua ja perheiden palveluita, joissa kohtaaminen on lempeää.' : 'We strengthen peer support, crisis help, and family services built on compassionate encounters.' },
  { 'title': lang == 'fi' ? 'Tutkimus ja tieto' : 'Research and insight', 'copy': lang == 'fi' ? 'Käännämme tutkimustiedon ymmärrettäviksi materiaaleiksi kampanjoihin, koulutuksiin ja päätöksenteon tueksi.' : 'We translate research into accessible materials for campaigns, training, and policy briefs.' }
 ] %}
{% set highlights = page_field_pairs(slug, 'highlights_' ~ lang, highlights_default) %}
{% set focus_items = page_field_list(slug, 'focus_items_' ~ lang, mission_data.focus) %}

<section class="relative bg-white py-16 md:py-20">
  <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-brand-orange/40 via-brand-orange to-brand-orange/40"></div>
  <div class="mx-auto max-w-6xl px-4">
    <div class="grid gap-12 md:grid-cols-[1fr,0.6fr] md:items-start">
      <div>
        <span class="eyebrow">{{ page_field(slug, 'eyebrow_' ~ lang, mission_data.eyebrow) }}</span>
        <h1 class="section-heading">{{ page_field(slug, 'title_' ~ lang, mission_data.title) }}</h1>
        <div class="prose max-w-none text-slate-700">
          {{ page_field(slug, 'content_' ~ lang, mission_data.copy)|raw }}
        </div>
      </div>
      <div class="rounded-3xl bg-brand-orange/10 p-8 shadow-lg shadow-brand-orange/20">
        <h2 class="text-xl font-semibold text-brand-orange">{{ page_field(slug, 'focus_heading_' ~ lang, mission_data.focus_heading) }}</h2>
        <ul class="mt-6 space-y-4 text-sm text-slate-700">
          {% for item in focus_items %}
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-brand-orange/20 text-brand-orange">{{ loop.index }}</span>
              <span>{{ item }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% set activities_slug = activities_slug ?? 'mission-page-activities' %}
{% set activities_defaults = {
  'fi': {
    'eyebrow': 'Toimintamme',
    'title': 'Vahvistamme osaamista, hyvinvointia ja yhteisöllisyyttä',
    'copy': '<p>Jokainen ohjelmamme syntyy yhteistyössä niiden kanssa, joita päihdepolitiikka koskettaa. Siten luomme ratkaisuja, jotka kestävät arjessa ja päätöksenteossa.</p>',
    'cta_label': 'Tutustu tarkemmin',
    'cta_url': '/toiminta'
  },
  'en': {
    'eyebrow': 'Our work',
    'title': 'We strengthen skills, wellbeing, and community',
    'copy': '<p>Every programme is co-designed with the people most affected by drug policy, creating solutions that endure in everyday life and decision-making.</p>',
    'cta_label': 'Explore the work',
    'cta_url': '/en/work'
  }
} %}
{% set activities_data = activities_defaults[lang] ?? activities_defaults.fi %}
{% set pillars_default = [
  { 'title': lang == 'fi' ? 'Haittoja vähentävät palvelut' : 'Harm reduction services', 'copy': lang == 'fi' ? 'Liikkuvat yksiköt ja turvalliset kohtaamispaikat tuovat tuen, välineet ja terveyspalvelut lähelle.' : 'Mobile units and safe spaces connect people with support, supplies, and health services.' },
  { 'title': lang == 'fi' ? 'Perheiden tuki' : 'Support for families', 'copy': lang == 'fi' ? 'Vertaistapaamiset ja ohjattu tuki auttavat läheisiä kohtaamaan päihteiden käyttöä rakentavasti.' : 'Peer gatherings and guided support help loved ones respond constructively to drug use.' },
  { 'title': lang == 'fi' ? 'Politiikkavaikuttaminen' : 'Policy advocacy', 'copy': lang == 'fi' ? 'Seuraamme lainsäädäntöä, julkaisemme muistioita ja käynnistämme keskusteluja vaihtoehtoisista malleista.' : 'We monitor legislation, publish briefs, and spark dialogue on alternative policy models.' }
 ] %}
{% set pillars = page_field_pairs(activities_slug, 'pillars_' ~ lang, pillars_default) %}

<section class="bg-brand-cloud py-16 md:py-20">
  <div class="mx-auto max-w-6xl px-4">
    <div class="md:max-w-2xl">
      <span class="eyebrow">{{ page_field(activities_slug, 'eyebrow_' ~ lang, activities_data.eyebrow) }}</span>
      <h2 class="section-heading">{{ page_field(activities_slug, 'title_' ~ lang, activities_data.title) }}</h2>
      <div class="prose max-w-none text-slate-700">
        {{ page_field(activities_slug, 'content_' ~ lang, activities_data.copy)|raw }}
      </div>
    </div>
    <div class="mt-12 grid gap-8 md:grid-cols-3">
      {% for pillar in pillars %}
        <div class="flex h-full flex-col rounded-3xl border border-brand-orange/10 bg-white p-6 shadow-sm shadow-brand-orange/10">
          <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-brand-orange/15 text-brand-orange">
            <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M12 6v12" />
              <path d="M6 12h12" />
            </svg>
          </div>
          <h3 class="mt-6 text-lg font-semibold text-slate-900">{{ pillar.title|default('') }}</h3>
          <p class="mt-3 text-sm text-slate-600">{{ pillar.copy|default('') }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="mt-10">
      <a href="{{ page_field(activities_slug, 'cta_url_' ~ lang, activities_data.cta_url) }}" class="inline-flex items-center gap-2 text-sm font-semibold text-brand-orange transition hover:text-brand-orange/80">
        <span>{{ page_field(activities_slug, 'cta_label_' ~ lang, activities_data.cta_label) }}</span>
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M5 12h14" />
          <path d="M13 6l6 6-6 6" />
        </svg>
      </a>
    </div>
  </div>
</section>

{% set theses_slug = theses_slug ?? 'mission-page-principles' %}
{% set theses_defaults = {
  'fi': {
    'eyebrow': 'Teesit',
    'title': 'Kymmenen periaatetta humaanille päihdepolitiikalle',
    'copy': '<p>Nämä teesit ohjaavat kaikkea toimintaamme vaikuttamisesta palveluiden kehittämiseen. Ne varmistavat, että muutos perustuu tietoon, ihmisarvoon ja yhteistyöhön.</p>'
  },
  'en': {
    'eyebrow': 'Principles',
    'title': 'Ten principles for humane drug policy',
    'copy': '<p>These principles guide everything we do—from advocacy to service development—ensuring that change is grounded in knowledge, dignity, and collaboration.</p>'
  }
} %}
{% set theses_data = theses_defaults[lang] ?? theses_defaults.fi %}
{% set theses_default = lang == 'fi'
  ? [
    'Päihdepolitiikan ja -työn on perustuttava parhaaseen saatavilla olevaan tietoon keinojen vaikuttavuudesta.',
    'Päihteitä käytetään lähes kaikissa yhteiskunnissa. Koska käyttöä ei voida täysin estää, sitä tulee ohjata vastuulliseen ja haittoja vähentävään suuntaan.',
    'Päihteiden ongelmakäyttöä on ehkäistävä tunnistamalla ja korjaamalla taustalla vaikuttavia yhteiskunnallisia ja yksilöllisiä tekijöitä.',
    'Apua tarvitseville on taattava inhimillinen ja tutkitusti vaikuttava hoito sekä kuntoutus, jossa psykososiaalinen tuki täydentää lääkehoitoa.',
    'On huomioitava, että suurin osa käytöstä ei ole ongelmakäyttöä. Päätöksenteossa on huomioitava myös kohtuullinen käyttö.',
    'Käyttäjiin kohdistuvaa negatiivista asenneilmapiiriä on purettava, sillä leimaaminen lisää haittoja ja vaikeuttaa avun saantia.',
    'Päihteiden käytön rangaistavuudesta on luovuttava, koska rangaistukset lisäävät haittoja eivätkä vähennä käyttöä.',
    'Huumemarkkinoiden jättäminen rikollisille on kestämätön ratkaisu – vaihtoehtoja on tarkasteltava avoimesti.',
    'Päihdepolitiikan keinojen on kunnioitettava ihmisoikeuksia ja huomioitava globaalit vaikutukset vastuullisesti.',
    'Etsimme yhdessä eri toimijoiden kanssa keinoja päihdepoliittisen reformin toteuttamiseksi.'
  ]
  : [
    'Drug policy and practice must be grounded in the best available evidence of what reduces harm.',
    'Because drug use exists in nearly every society, our task is to steer it toward responsibility and harm reduction rather than punishment.',
    'Preventing problematic use requires addressing the social and individual factors that shape vulnerability.',
    'People seeking help deserve humane, evidence-based care that combines psychosocial support with medical treatment.',
    'Most use is non-problematic—policy must recognise this as it balances public health and liberty.',
    'Stigma fuels harm and blocks access to help; dismantling it is essential.',
    'Criminalising use increases harm and fails to reduce consumption; penalties must be replaced with support.',
    'Leaving drug markets to organised crime is unsustainable—regulated alternatives must be explored openly.',
    'Drug policy tools must respect human rights and consider global impacts responsibly.',
    'We work with diverse partners to realise meaningful drug policy reform.'
  ]
%}
{% set theses = page_field_list(theses_slug, 'theses_' ~ lang, theses_default) %}

<section class="bg-white py-16 md:py-20">
  <div class="mx-auto max-w-6xl px-4">
    <span class="eyebrow">{{ page_field(theses_slug, 'eyebrow_' ~ lang, theses_data.eyebrow) }}</span>
    <h2 class="section-heading">{{ page_field(theses_slug, 'title_' ~ lang, theses_data.title) }}</h2>
    <div class="prose max-w-none text-slate-700">
      {{ page_field(theses_slug, 'content_' ~ lang, theses_data.copy)|raw }}
    </div>
    <ol class="mt-10 grid gap-6 md:grid-cols-2">
      {% for thesis in theses %}
        <li class="group flex h-full flex-col rounded-3xl border border-brand-orange/15 bg-brand-cloud p-6 shadow-sm shadow-brand-orange/10 transition duration-150 hover:-translate-y-1 hover:border-brand-orange/40">
          <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-brand-orange text-sm font-semibold text-white shadow-lg shadow-brand-orange/30">{{ loop.index }}</span>
          <p class="mt-4 text-sm leading-relaxed text-slate-700">{{ thesis }}</p>
        </li>
      {% endfor %}
    </ol>
  </div>
</section>

